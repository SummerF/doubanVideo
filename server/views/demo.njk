 <div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>{{h1}}</h1>
            {# for #}
            {% for item in intm %}
                <p>{{item.tit}}</p>
            {% else %}
                <p>This would display if the 'item' collection were empty</p>
            {% endfor %}

            {# [[0,1,2],[3,4,5],[6,7,8]] #}
            {% for x,y,z in pointer %}
                pointer:{{x}},{{y}},{{z}}
            {% endfor %}

            {# macro 宏 跟函数一样使用 #}
            {% macro field(name, value='', type='text') %}
                <input type="{{ type }}" name="{{ name }}" value="{{ value | escape }}" />
            {% endmacro %}
            {{ field('user') }}
            {{ field('pass', type='password') }}
    
            {# set  #}
            <div>
                {{username}}
                    {% set username='123' %}
                {{username}}
            </div>
            {# 第一个字符大写 #}
            {% filter title %}
                hello 
            {% endfilter %}

            {% macro foo(x, y, z=5, w=6) %}
            {{ x }}, {{ y }}, {{ z }}, {{ w}}
            {% endmacro %}
            {{ foo(1,2)}}
            {{foo(1,2,w=9)}}
            <div>
                {% for i in range(0, 3) -%}
                {{ i }},
                {%- endfor %}
            </div>
            {# 偶数添加相应的clsss #}
            <div>
                {% set cls = cycler("odd","even") %}
                {% for row in pointer %}
                    <div class="{{cls.next()}}">{{row.name}}</div>
                {% endfor %}
            </div>
        </div>

        <div class="col-md-4">
            <h2>slide</h2>
        </div>
    </div>
</div>
